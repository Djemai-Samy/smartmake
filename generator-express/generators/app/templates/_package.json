{
	"name": "<%= projectName %>",
	"version": "1.0.0",
	"description": "Express app generator",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"dev": "ts-node-dev --poll ./src/index.ts",
		"build": "rimraf ./dist && tsc -p ./",
		"start": "tsc -p ./ && node dist/index.js",
		"docker:build": "docker build -t <%= projectName %>-image . ",
		"docker:run": "<%= packageManager %> docker:build && docker run --name <%= projectName %>-container -p 3000:3000 <%= projectName %>-image"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/node": "^18.6.3",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.7.4",
		"tsc": "^2.0.4",
		"rimraf": "^3.0.2"
	},
	"dependencies": {
		"express": "^4.18.1"
	}
}
